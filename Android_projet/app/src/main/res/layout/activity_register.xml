<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:hint="Mot de passe :"
            android:ems="10"
            android:id="@+id/mdp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:hint="Confirmation mot de passe :"
            android:ems="10"
            android:id="@+id/mdpConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="8dp"/>
    <Button
            android:text="M'inscrire !"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/button4"
            android:onClick="onClickRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mdpConfirm" android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:hint="Mail :"
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/imgProfil"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="56dp"
            android:layout_height="52dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imgProfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="24dp"/>

    <TextView
            android:text="Inscription"
            android:autoSizeTextType="uniform"
            android:layout_width="142dp"
            android:layout_height="42dp" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="(6 à 20 caractères)"
            android:layout_width="210dp"
            android:layout_height="22dp" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/mdp"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>