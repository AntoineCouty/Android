        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <Button
            android:text="@string/Chiffrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chiffrement" tools:layout_editor_absoluteY="102dp"
            android:onClick="ChiffrementOnClick"
            tools:layout_editor_absoluteX="159dp" tools:ignore="MissingConstraints"/>
    <Button
            android:text="@string/Dechiffrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dechiffrement" tools:layout_editor_absoluteY="189dp"
            android:onClick="DechiffrementOnClick"
            tools:layout_editor_absoluteX="159dp" tools:ignore="MissingConstraints"/>
</LinearLayout>